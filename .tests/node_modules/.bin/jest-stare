#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/theia/.ccbp/ccbp-jest-reporter/lib/node_modules:/home/theia/.ccbp/ccbp-jest-reporter/node_modules:/home/theia/.ccbp/node_modules:/home/theia/node_modules:/home/node_modules:/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-1h/.tests/node_modules/ccbp-jest-reporter/lib/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-1h/.tests/node_modules/ccbp-jest-reporter/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-1h/.tests/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-1h/node_modules:/home/nxtwave/nodejs/coding-practices/node_modules:/home/nxtwave/nodejs/node_modules:/home/nxtwave/node_modules"
else
  export NODE_PATH="$NODE_PATH:/home/theia/.ccbp/ccbp-jest-reporter/lib/node_modules:/home/theia/.ccbp/ccbp-jest-reporter/node_modules:/home/theia/.ccbp/node_modules:/home/theia/node_modules:/home/node_modules:/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-1h/.tests/node_modules/ccbp-jest-reporter/lib/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-1h/.tests/node_modules/ccbp-jest-reporter/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-1h/.tests/node_modules:/home/nxtwave/nodejs/coding-practices/coding-practice-1h/node_modules:/home/nxtwave/nodejs/coding-practices/node_modules:/home/nxtwave/nodejs/node_modules:/home/nxtwave/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../ccbp-jest-reporter/lib/jest-stare.js" "$@"
else
  exec node  "$basedir/../ccbp-jest-reporter/lib/jest-stare.js" "$@"
fi
